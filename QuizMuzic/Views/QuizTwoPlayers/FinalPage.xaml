<Page x:Class="QuizMuzic.Views.QuizTwoPlayers.FinalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizMuzic.Views.QuizTwoPlayers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinalPage">

    <Grid>
        <Image Source="/Resources/background90.png" Stretch="Fill"/>
        <StackPanel Margin="50">
            <TextBlock Text="Поздравляем!" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Resources/imageVictory.png" Width="110" Height="110" HorizontalAlignment="Left"/>
                <Grid Grid.Column="1">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="18"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Игрок "/>
                        <TextBlock Text="Олежа "/>
                        <TextBlock Text="Победил!"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Результат: "/>
                        <TextBlock Text="-5 "/>
                        <TextBlock Text="балла"/>
                    </StackPanel>
                </Grid>
            </Grid>
            <StackPanel Orientation="Horizontal" Margin="10">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="20"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="Игрок "/>
                <TextBlock Text="Олежа_2"/>
                <TextBlock Text=": "/>
                <TextBlock Text="-6 "/>
                <TextBlock Text="балла"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
